{
  "name": "core-cloudflare-manager-api",
  "version": "1.0.0",
  "description": "Wrangler as a Service - Cloudflare Worker management API",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run migrate:db && wrangler deploy",
    "deploy:prod": "npm run db:migrate:remote && wrangler deploy --env=production",
    "deploy:preview": "wrangler deploy --env=staging",
    "lint": "npm run type-check",
    "problems": "tsc --noEmit --pretty false",
    "verify": "npm run lint && npm run problems",
    "test": "vitest",
    "test:health": "bash ./scripts/health-check.sh",
    "test:token": "bash ./scripts/test-token.sh",
    "type-check": "tsc --noEmit",
    "types": "wrangler types",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "migrate:db": "wrangler d1 migrations apply DB --remote",
    "update:schemas": "bash ./scripts/update-api-schemas.sh"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "proxy",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cloudflare": "^3.5.0",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.5.0",
    "kysely": "^0.27.3",
    "kysely-d1": "^0.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "patch-package": "^8.0.1",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "wrangler": "^4.46.0"
  }
}
